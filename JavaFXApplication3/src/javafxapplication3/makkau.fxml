   <Label fx:id="welcomeText" text="CONFESSION PAGE" textAlignment="CENTER">
      <font>
         <Font name="Roboto Bold" size="32.0" />
      </font></Label>
   <TextArea fx:id="confessionPrint" editable="false" prefHeight="200.0" prefWidth="200.0" />
   <Pane prefHeight="144.0" prefWidth="380.0">
      <children>
         <Button layoutX="487.0" layoutY="37.0" onAction="#onNextButtonClick" text="Next" />
         <Button layoutX="63.0" layoutY="33.0" onAction="#onBackButtonClick" prefHeight="38.0" prefWidth="59.0" text="Back" />
         <Button fx:id="replyButton" layoutX="276.0" layoutY="37.0" mnemonicParsing="false" onAction="#switchScene" text="Reply" />
      </children>
   </Pane>
</VBox>
